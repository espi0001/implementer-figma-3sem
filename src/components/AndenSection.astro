---
import { Image } from "astro:assets";
import home1 from "../assets/home1.jpg";
import Tag from "./Tag.astro";

const { imageProps, h2, tekst, tagProps, li1, li2, order } = Astro.props;
---

<section class="hero-section">
  <figure class={order}>
    <!-- <Image {...imageProps} /> -->
  </figure>
  <Image alt="" src={home1} />
  <article>
    <Tag {...tagProps}><slot /></Tag>

    <div class="content">
      <div>
        <h2>{h2}</h2>
        <p>{tekst}</p>
      </div>
      <ul>
        <li>{li1}</li>
        <li>{li2}</li>
      </ul>
    </div>
  </article>
</section>

<style>
  @layer components {
    .hero-section {
      grid-column: full;
      display: grid;
      grid-template-columns: [full-start] 1fr [content] minmax(0, 600px) minmax(0, 600px) 1fr [full-end];
      grid-template-rows: 1fr auto auto;
      max-height: 90vh;
      overflow: hidden;
      gap: 2rem;

      color: var(--color-primary3);

      figure {
        grid-column: 2 / 3;
        grid-row: 1 / 3;
        display: grid;
        grid-template-columns: subgrid;
        display: none;
      }
      img {
        display: grid;
        grid-template-columns: subgrid;
        grid-column: 2 / 3;
        grid-row: 2 / 3;
      }
      article {
        grid-column: 3 / -1;
        grid-row: 1 / -2;
      }
    }

    .order {
      order: 1;
    }

    [data-icon="balance"] {
      width: 24px;
    }

    ul {
      display: grid;
      gap: 1rem;
    }

    li {
      display: grid;
      grid-template-columns: auto 1fr;
      align-items: center;
      gap: 1rem;
      font-size: 1rem;
      color: #595566;
    }

    li:before {
      content: "";
      width: 1.6rem;
      aspect-ratio: 1;
      background: var(--checkmark-icon) 50% 50% / contain no-repeat;
    }
  }
</style>
