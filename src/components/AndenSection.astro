---
import { Image } from "astro:assets";
import home1 from "../assets/home1.jpg";
import Tag from "./Tag.astro";

const { h2, tekst, tagProps, li1, li2 } = Astro.props;
---

<section class="container">
  <div class="del1">
    <figure class="figure-version2">
      <Image alt="" src={home1} />
    </figure>
  </div>
  <div class="del2">
    <div>
      <Tag {...tagProps}><slot /></Tag>
      <h2>{h2}</h2>
      <p>{tekst}</p>
    </div>
    <ul>
      <li>{li1}</li>
      <li>{li2}</li>
    </ul>
  </div>
</section>

<style>
  @layer components {
    .container {
      grid-column: full;
      display: grid;
      grid-template-columns: var(--layout-grid2);
      grid-template-rows: var(--layout-rows2);
      gap: 2rem;
      color: var(--color-primary3);
      padding: 5rem 0;
      @media (width < 600px) {
        display: block;
      }

      .del1 {
        grid-column: 2 / 3;
        grid-row: 2 / 3;
        display: grid;
        grid-template-columns: subgrid;
      }
      .del2 {
        grid-column: 3;
        grid-row: 1 / 3;

        div {
          display: flex;
          flex-direction: column;
        }

        ul {
          display: grid;
          gap: 1rem;
          margin-top: 1.5rem;
          li {
            display: grid;
            grid-template-columns: auto 1fr;
            align-items: center;
            gap: 1rem;
            font-size: 1rem;
            color: var(--color-text);
            max-width: 65ch;
            &:before {
              content: "";
              width: 1.6rem;
              aspect-ratio: 1;
              background: var(--checkmark-icon) 50% 50% / contain no-repeat;
            }
          }
        }
      }
    }

    [data-icon="balance"] {
      width: 24px;
    }
  }
</style>
