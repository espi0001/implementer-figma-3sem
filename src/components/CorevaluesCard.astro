---
// import type { ImageMetadata } from "astro";
import { Icon } from "astro-icon/components";

const { corevalues } = Astro.props;
const { icon, title, description, link, text } = corevalues;

// const images = import.meta.glob<{ default: ImageMetadata }>("/src/icons/*.{jpeg,jpg,png,gif}");
// if (!images[img]) throw new Error(`"${img}" does not exist in glob: "src/icons/*.{jpeg,jpg,png,gif}"`);
---

<article>
  <img src={icon} alt="" />
  <h5>{title}</h5>
  <p>{description}</p>
  <a href={link}>{text}</a>
  <div class="iconer">
    <Icon name="instagram" />
    <Icon name="twitter" />
    <Icon name="facebook" />
  </div>
</article>

<style>
  @layer components {
    article {
      color: var(--color-primary3);
      text-align: center;
      p {
        color: var(--color-text);
      }
    }
    img {
      border-radius: 20px;
    }

    .iconer {
      display: flex;
      gap: 29px;
      justify-content: center;
    }
  }
</style>
