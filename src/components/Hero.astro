---
import Tag from "./Tag.astro";

const { baggrund, h1 } = Astro.props;
---

<article class={baggrund}>
  <div class="box">
    <Tag style="secondary"> <slot /> </Tag>
    <h1>{h1}</h1>
  </div>
</article>

<style>
  @layer components {
    article {
      background-size: cover;
      aspect-ratio: 16/5;
      color: var(--color-primary3);
    }
    .baggrund1 {
      background-image: url(../assets/about1.avif);
    }
    .baggrund2 {
      background-image: url(../assets/team1.avif);
    }
    .baggrund3 {
      background-image: url(../assets/case1.avif);
    }
    .box {
      background: rgba(255, 255, 255, 0.85);
      border-radius: 29px;
