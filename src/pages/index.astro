<style>
  :root {
    --checkmark-icon: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256"><path fill="%234EAF4E" d="M176.49 95.51a12 12 0 0 1 0 17l-56 56a12 12 0 0 1-17 0l-24-24a12 12 0 1 1 17-17L112 143l47.51-47.52a12 12 0 0 1 16.98.03M236 128A108 108 0 1 1 128 20a108.12 108.12 0 0 1 108 108m-24 0a84 84 0 1 0-84 84a84.09 84.09 0 0 0 84-84"/></svg>');
  }

  ul {
    display: grid;
    gap: 1rem;
  }

  li {
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;
    gap: 1rem;
    font-size: 1rem;
    color: #595566;
  }

  li:before {
    content: "";
    width: 1.6rem;
    aspect-ratio: 1;
    background: var(--checkmark-icon) 50% 50% / contain no-repeat;
  }

  .hero {
    background-color: var(--color-primary3);
    color: var(--color-secondary2);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 32px;
    padding-inline: 32px;

    img {
      width: 100%;
      max-width: 600px;
    }
  }

  .tekst-knap {
    display: inline-flex;
    flex-direction: column;
    gap: 29px;
  }

  .tekst {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  h1 {
    font-weight: var(--font-weight-700);
    margin-bottom: 32px;
  }

  .who-we-are {
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  .what-to-expect {
    justify-content: center;
    align-items: flex-start;
    gap: 82px;
    display: inline-flex;
    padding: 263px 0;

    img {
      width: 20%;
    }

    article {
      display: flex;
      flex-direction: column;
      gap: 14px;
    }

    .content {
      display: flex;
      flex-direction: column;
      gap: 24px;
    }
  }

  .title {
    padding-left: 12px;
    padding-right: 12px;
    background: var(--color-primary1);
    border-radius: 20px;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 10px;
    display: inline-flex;
  }

  .services {
    margin: 0;
    /* scroll-snap-align: center; */
    scroll-snap-stop: always;
    display: flex;
    flex-direction: column;
    place-content: center;
    align-items: center;
    gap: var(--content-gap);

    > * {
      /* max-width: var(--content-width); */
    }
    h2 {
      font-weight: bold;
    }
  }

  .teksten {
    max-width: 50rem;
  }
